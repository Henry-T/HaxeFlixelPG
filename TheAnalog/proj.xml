	<assets path="assets" if="desktop" />
	<assets path="assets" if="mobile" />
	
	<icon name="assets/HaxeFlixel.svg" />
	
	<haxelib name="nme" />
	<haxelib name="flixel" />
	
    <set name="FLX_NO_TOUCH" if="flash" />
    <set name="FLX_NO_MOUSE" if="android" />

</project>